<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:maxLength="8"
            android:text="0"
            android:gravity="right"
            android:textSize="80dp"
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:textSize="50dp"
            android:layout_weight="1"
            android:id="@+id/seven"
            android:text="7"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:textSize="50dp"
            android:layout_weight="1"
            android:id="@+id/eight"
            android:text="8"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:textSize="50dp"
            android:layout_weight="1"
            android:id="@+id/nine"
            android:text="9"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:textSize="50dp"
            android:layout_weight="1"
            android:id="@+id/plus"
            android:text="+"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:textSize="50dp"
            android:layout_weight="1"
            android:id="@+id/four"
            android:text="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:textSize="50dp"
            android:layout_weight="1"
            android:id="@+id/five"
            android:text="5"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:textSize="50dp"
            android:layout_weight="1"
            android:id="@+id/six"
            android:text="6"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:textSize="50dp"
            android:layout_weight="1"
            android:id="@+id/minus"
            android:text="ｰ"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:textSize="50dp"
            android:layout_weight="1"
            android:id="@+id/one"
            android:text="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:textSize="50dp"
            android:layout_weight="1"
            android:id="@+id/two"
            android:text="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:textSize="50dp"
            android:layout_weight="1"
            android:id="@+id/three"
            android:text="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:textSize="50dp"
            android:layout_weight="1"
            android:id="@+id/kakeru"
            android:text="×"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:textColor="@android:color/holo_red_dark"
            android:textSize="50dp"
            android:layout_weight="1"
            android:id="@+id/clear"
            android:text="C"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:textSize="50dp"
            android:layout_weight="1"
            android:id="@+id/zero"
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:textSize="50dp"
            android:layout_weight="1"
            android:id="@+id/result"
            android:text="="
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:textSize="50dp"
            android:layout_weight="1"
            android:id="@+id/waru"
            android:text="÷"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>